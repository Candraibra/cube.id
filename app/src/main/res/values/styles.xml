<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorWhite</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@color/colorWhite</item>
    </style>

    <style name="textHeaderBlack" parent="TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">@font/acumin_demi</item>
        <item name="android:textColor">@color/colorFontSub</item>
    </style>

    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/acumin_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Widget.BottomNavigationViewInactive" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/acumin_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/acumin_regular</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">13sp</item>
    </style>

